<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customerData"
    android:background="@drawable/customerbg"
    tools:context=".customer.CustomerData">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Data"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/customer_name"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gold_border"
            android:layout_gravity="center"
            android:hint="Full name"
            android:padding="15dp"/>
        <EditText
            android:id="@+id/customer_address"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gold_border"
            android:layout_gravity="center"
            android:hint="Address"
            android:padding="15dp"/>
        <EditText
            android:id="@+id/customer_contact"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gold_border"
            android:layout_gravity="center"
            android:hint="Contact No"
            android:padding="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select an image as your profile picture"
                android:layout_gravity="center"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/customer_image"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_image_24" />
        </LinearLayout>
        <Button
            android:id="@+id/customerDataSubmitBtn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>